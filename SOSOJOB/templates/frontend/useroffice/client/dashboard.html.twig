{% extends 'frontend/base.html.twig' %}

{% block title %}
    SOS JOB - Tableau de bord
{% endblock %}

{% block stylesheets %}
    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="{{ path('home') }}">
                <div class="sidebar-brand-text mx-3">SOS JOB</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('dash_client') }}">
                    <i class="fas fa-fw fa-compass"></i>
                    <span id="collapseSidebar">Tableau de Bord</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Menu
            </div>

            <!-- Nav Item - Missions -->
            <li class="nav-item">
                <a class="nav-link" id="postmission" href="{{ path('postmission') }}">
                    <i class="fas fa-fw fa-clipboard-list"></i>
                    <span id="collapseSidebar">Poster une mission </span></a>
            </li>
            <!-- Nav Item - Dispo -->
            <li class="nav-item">
                <a class="nav-link" id="mission" href="{{ path('mission') }}">
                    <i class="fas fa-fw fa-calendar-alt"></i>
                    <span id="collapseSidebar">Missions </span></a>
            </li>

            <!-- Nav Item - Bank -->
            <li class="nav-item">
                <a class="nav-link" id="facture" href="{{ path('facture') }}">
                    <i class="fas fa-fw fa-calendar-alt"></i>
                    <span id="collapseSidebar">Factures</span></a>
            </li>



            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button href="#sidebarText" data-toggle="collapse" role="button" aria-expanded="true"
                        aria-controls="sidebarText" class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Search  TEMPORARY DEBUG-->
                    <!--
                    <form
                        class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Rechercher..."
                                aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                    -->

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - Search Dropdown (Visible Only XS) -->
                        <li class="nav-item dropdown no-arrow d-sm-none">
                            <a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-search fa-fw"></i>
                            </a>
                            <!-- Dropdown - Messages -->
                            <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in"
                                 aria-labelledby="searchDropdown">
                                <form class="form-inline mr-auto w-100 navbar-search">
                                    <div class="input-group">
                                        <input type="text" class="form-control bg-light border-0 small"
                                               placeholder="Search for..." aria-label="Search"
                                               aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button">
                                                <i class="fas fa-search fa-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">{{ app.user.username }}</span>
                                <img class="img-profile rounded-circle"
                                     src="img/undraw_profile.svg">
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Paramètres du compte
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Déconnexion
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Tableau de Bord</h1>
                    </div>

                    <!-- Content Row -->
                    <div class="row">

                        <!-- Mission Success Card -->
                        <div class="col-xl-4 col-md-6 mb-4">
                            <div class="card shadow">
                                <div class="card-header py-3 border-left-success">
                                    <h6 class="m-0 font-weight-bold text-success">Prochaine Mission</h6>
                                </div>
                                <div class="card-body ">
                                    <div class="row mb-2">
                                        <div class="col-sm-4">
                                            <div class="font-weight-bold">Role :</div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="font-weight-bold">Jober :</div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="font-weight-bold">Période :</div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div></div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div></div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="collapse" id="collapseCardMissionSuccess" style="">
                                    <div class="card-body">

                                    </div>
                                </div>
                                <a href="#collapseCardMissionSuccess" class="d-block card-body py-3"
                                   data-toggle="collapse" role="button" aria-expanded="true"
                                   aria-controls="collapseCardMissionSuccess">
                                    <h6 class="m-0 font-weight-bold text-dark">En Savoir Plus</h6>
                                </a>
                            </div>
                        </div>

                        <!-- Mission Ongoing Card -->
                        <div class="col-xl-4 col-md-6 mb-4">
                            <div class="card shadow">
                                <div class="card-header py-3 border-left-warning">
                                    <h6 class="m-0 font-weight-bold text-warning">Mission En Cours</h6>
                                </div>
                                <div class="card-body ">
                                    <div class="row mb-2">
                                        <div class="col-sm-4">
                                            <div class="font-weight-bold">Role :</div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="font-weight-bold">Jober :</div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="font-weight-bold">Période :</div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div></div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div></div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="collapse" id="collapseCardMissionOngoing" style="">
                                    <div class="card-body">

                                    </div>
                                </div>
                                <a href="#collapseCardMissionOngoing" class="d-block card-body py-3"
                                   data-toggle="collapse" role="button" aria-expanded="true"
                                   aria-controls="collapseCardMissionOngoing">
                                    <h6 class="m-0 font-weight-bold text-dark">En Savoir Plus</h6>
                                </a>
                            </div>
                        </div>


                    </div>

                    <br>
                    <br>


                    <div class="h3 mb-0 text-gray-800" style='text-align:center'>
                        <h1 id="h1">Terminer votre inscription afin de créer votre demande de mission.</h1>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal"
                                data-target="#exampleModalLong" id="comp">
                            Accéder à la suite de l’inscription
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog"
                             aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Compléter votre profil</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>

                                    </div>
                                    <div class="modal-body">

                                        {{ form_start(forme) }}


                                        {{ form_widget(forme) }}


                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer
                                        </button>
                                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                                    </div>
                                    {{ form_end(forme) }}
                                </div>
                            </div>
                        </div>


                        {% for message in app.flashes('succes') %}
                            <script>
                                var T = document.getElementById("comp");
                                var h = document.getElementById("h1");
                                T.style.display = "none";
                                h.style.display = "none";
                            </script>
                            <div class="flash-notice alert alert-success"><i class="fa fa-check"></i> {{ message|raw }}
                            </div>
                        {% endfor %}


                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>SOS JOB 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Quitter la session actuelle ?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <!-- <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div> -->
                <div class="modal-footer">
                    <button class="btn btn-primary" type="button" data-dismiss="modal">Annuler</button>
                    <a class="btn btn-danger" href="{{ path('logout') }}">Déconnexion</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/chart-area-demo.js"></script>
    <script src="js/demo/chart-pie-demo.js"></script>
    <script>

        {% if var == true %}

        var T = document.getElementById("comp");
        var h = document.getElementById("h1");
        T.style.display = "none";
        h.style.display = "none";

        {% else %}
        //désactiver les boutons href si l'inscription n'est pas encore compléter
        var Ids = ["postmission", "mission", "facture"];
        for (var i = 0; i < Ids.length; i++) {
            document.getElementById(Ids[i]).onclick = function () {
                return false;
            }
        }
        {% endif %}
        {% for message in app.flashes('yes') %}
        //réactiver les bouton href
        var Ids = ["postmission", "mission", "facture"];
        for (var i = 0; i < Ids.length; i++) {
            document.getElementById(Ids[i]).onclick = function () {
                return true;
            }
        }
        {% endfor %}


    </script>
{% endblock %}
