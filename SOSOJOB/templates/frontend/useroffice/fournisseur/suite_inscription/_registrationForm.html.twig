                 else if($('#fournisseur_form_tu_es option:selected').val() == "Personne céant une entreprise en ZUS") {
                        $('#acd7').toggle();
                        $('#acd2').hide();
                        $('#acd3').hide();
                        $('#acd4').hide();
                        $('#acd5').hide();
                        $('#acd6').hide();
                        $('#acd1').hide();
                }
                
            });

           

        });

        $("#fournisseur_form_accre_1").click(function(){
           $('#accre').hide();
           tu_es=false;
        });

        

         $("#fournisseur_form_ressortissant_hors_UE_1").click(function(){
            $("#r_ue").hide();
            ru_e=false;
           
            
