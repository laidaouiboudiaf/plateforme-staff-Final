    var is_available =_agreeTerms =false;
//ressortissant
    var tu_es=ru_e=false;



//verifie si le button radio est coché ou pas
        $("#fournisseur_form_etablissement_UE").click(function(){
            etablissement=true;
        });

        $("#fournisseur_form_ressortissant_hors_UE").click(function(){
            ressortissant=true;
        });

        $("#fournisseur_form_activite_salarie").click(function(){
            activite=true;
        });

        $("#fournisseur_form_genre").click(function(){
            genre=true;
        });

        $("#fournisseur_form_situation").click(function(){
            situation=true;
        });

        $("#fournisseur_form_is_available").click(function(){
            is_available=true;
        });

        $("#fournisseur_form_agreeTerms").click(function(){
            _agreeTerms=true;
        });



    //hide pour cacher les les parties 1,2,3
        $('#2emP').hide();
        $('#3emP').hide();
        $('#4emP').hide(); 
        $('#r_ue').hide();
        $('#accre').hide();

        //les fichiers de la 4iéme partie
        $('#acd1').hide();
        $('#acd2').hide();
        $('#acd3').hide();
        $('#acd4').hide();
        $('#acd5').hide();
        $('#acd6').hide();
        $('#acd7').hide();
      


        $("#fournisseur_form_accre_0").click(function(){
           $('#accre').toggle();    
           tu_es=true;

            $('#fournisseur_form_tu_es').change(function() {
                if($('#fournisseur_form_tu_es option:selected').val() == "") {
                        $('#acd1').hide();
                        $('#acd2').hide();
                        $('#acd3').hide();
                        $('#acd4').hide();
                        $('#acd5').hide();
                        $('#acd6').hide();
                        $('#acd7').hide();
                }

                else if($('#fournisseur_form_tu_es option:selected').val() == "Jeune de 18 à 25") {
                        $('#acd1').toggle();
                        $('#acd2').hide();
                        $('#acd3').hide();
                        $('#acd4').hide();
                        $('#acd5').hide();
                        $('#acd6').hide();
                        $('#acd7').hide();
                }
                 else if($('#fournisseur_form_tu_es option:selected').val() == "Demandeur d'emploi non indemnisé inscrit à Pôle Emploi") {
                        $('#acd2').toggle();
                        $('#acd1').hide();
                        $('#acd3').hide();
                        $('#acd4').hide();
                        $('#acd5').hide();
                        $('#acd6').hide();
                        $('#acd7').hide();
                }
                else if($('#fournisseur_form_tu_es option:selected').val() == "Bénéficiare du RSA ou de l'ASS") {
                        $('#acd3').toggle();
                        $('#acd2').hide();
                        $('#acd1').hide();
                        $('#acd4').hide();
                        $('#acd5').hide();
                        $('#acd6').hide();
                        $('#acd7').hide();
                }
                 else if($('#fournisseur_form_tu_es option:selected').val() == "Demandeur d'emploi indemnisé") {
                        $('#acd4').toggle();
                        $('#acd2').hide();
                        $('#acd3').hide();
                        $('#acd1').hide();
                        $('#acd5').hide();
                        $('#acd6').hide();
                        $('#acd7').hide();
                }
                 else if($('#fournisseur_form_tu_es option:selected').val() == "Personne de - de 30ans non indemnisée") {
                        $('#acd5').toggle();
                        $('#acd2').hide();
                        $('#acd3').hide();
                        $('#acd4').hide();
                        $('#acd1').hide();
                        $('#acd6').hide();
                        $('#acd7').hide();
                }

                 else if($('#fournisseur_form_tu_es option:selected').val() == "Personne de - de 3Oans reconnue handicapée") {
                        $('#acd6').toggle();
                        $('#acd2').hide();
                        $('#acd3').hide();
                        $('#acd4').hide();
                        $('#acd5').hide();
                        $('#acd1').hide();
                        $('#acd7').hide();
