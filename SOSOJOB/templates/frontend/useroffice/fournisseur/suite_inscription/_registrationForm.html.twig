        $("#fournisseur_form_ressortissant_hors_UE_0").click(function(){
            $("#r_ue").show();
            ru_e=true;
          
        });



         $("#suv1").click(function () {
             //test= $('#fournisseur_form_nom_pere').val() ;
             //$("#nom").val(test);          
           
            if($("#fournisseur_form_adresseF").val() == ''){
                 $("#fournisseur_form_adresseF").focus();
            }

            else if($("#fournisseur_form_numero_securiteSociale").val() == ''){
             $("#fournisseur_form_numero_securiteSociale").focus();
            }

            else if($("#fournisseur_form_nom_pere").val() == ''){
             $("#fournisseur_form_nom_pere").focus();
            }

            else if($("#fournisseur_form_prenom_pere").val() == ''){
             $("#fournisseur_form_nom_pere").focus();
            }

            else if($("#fournisseur_form_nom_mere").val() == ''){
             $("#fournisseur_form_nom_mere").focus();
            }

            else if($("#fournisseur_form_prenom_mere").val() == ''){
             $("#fournisseur_form_nom_mere").focus();
            }

            else if(situation == false){
             $("#fournisseur_form_situation").focus();
            }


             else if (genre == false){
             $("#fournisseur_form_genre").focus();
            }

            else if(etablissement == false){
             $("#fournisseur_form_etablissement_UE").focus();
            }

            else if(ressortissant == false){
             $("#fournisseur_form_ressortissant_hors_UE").focus();
            }
           

            else if(ru_e == true  && $("#fournisseur_form_numero_titre_sejour").val() == ''){
            $("#fournisseur_form_numero_titre_sejour").focus();
            }  
        
            else if(ru_e == true  && $("#fournisseur_form_departement_delivrance").val() == ''){
                $("#fournisseur_form_departement_delivrance").focus();

            }     
             else if(ru_e == true  && $("#fournisseur_form_ville_delivrance").val() == ''){
                    $("#fournisseur_form_ville_delivrance").focus();
            }     
               

            else if(activite == false){
             $("#fournisseur_form_activite_salarie").focus(); 
            }
             

             else{


                $('#2emP').toggle();
                $('#1erP').hide();
                $('#3emP').hide();
                $('#4emP').hide();

             }


        });

        $("#pre1").click(function () {
            $('#1erP').toggle();
            $('#2emP').hide();
            $('#3emP').hide();
            $('#4emP').hide();

        });


        $("#suv2").click(function () {
         document.getElementById('fournisseur_form_ci').style = "";
         document.getElementById('fournisseur_form_justificatif_domicile').style = "";
         document.getElementById('fournisseur_form_signature').style = "";

        if($("#fournisseur_form_ci").val() == ''){
            document.getElementById('fournisseur_form_ci').style = "bordr:4px solid;color:#FF0000;";
            $("#fournisseur_form_ci").focus();
        }


