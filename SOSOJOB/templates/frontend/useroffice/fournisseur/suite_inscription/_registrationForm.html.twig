            document.getElementById('fournisseur_form_justificatif_domicile').style = "bordr:4px solid;color:#FF0000;";
            $("#fournisseur_form_justificatif_domicile").focus();
        }

        else if($("#fournisseur_form_signature").val() == ''){
             document.getElementById('fournisseur_form_signature').style = "bordr:4px solid;color:#FF0000;";
            $("#fournisseur_form_signature").focus();
        }


        else{

            $('#3emP').toggle();
            $('#1emP').hide();
