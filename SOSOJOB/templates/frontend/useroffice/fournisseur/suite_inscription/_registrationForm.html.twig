                $('#4emP').toggle();
                $('#1erP').hide();
                $('#2emP').hide();
                $('#3emP').hide();
            }
        });

         $("#pre3").click(function () {
            $('#3emP').toggle();
            $('#2emP').hide();
            $('#1erP').hide();
            $('#4emP').hide();

        });

         $("#save").click(function () {

             if( tu_es == true && $("#fournisseur_form_tu_es").val() == ''){
