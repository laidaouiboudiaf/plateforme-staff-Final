{% extends './frontend/base.html.twig' %}

{% block title %}
SOS JOB - Connexion
{% endblock %}

{% block stylesheets %}
<!-- Custom fonts for this template-->
<link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

<!-- Custom styles for this template-->
<link href="css/sb-admin-2.min.css" rel="stylesheet">
{% endblock %}

{% block bodyclass %}
class="bg-gradient-primary"
{% endblock %}

{% block body %}
<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Bienvenue Admin</h1>
                                </div>
                                <form method="post" class="user">
                                    {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                    {% if app.user %}
                                    <div class="mb-3">
                                        You are logged in as {{ app.user.username }}, <a href="{{ path('logout') }}">Logout</a>
                                    </div>
                                    {% endif %}
                                    <div class="form-group">
                                        <input type="email" value="{{ last_username }}" name="adresseMail" class="form-control form-control-user" id="InputEmail" aria-describedby="emailHelp" placeholder="Adresse Email" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="password" class="form-control form-control-user" id="InputPassword" placeholder="Mot de Passe" required>
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" name="_remember_me" id="customCheck">
                                            <label class="custom-control-label" for="customCheck">Rester Connecté ?</label>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary btn-user btn-block" type="submit">
                                        Se Connecter
                                    </button>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="{{ path('register') }}">Créer un Compte</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" data-toggle="modal" href="#passwordmodal">Mot de Passe oublié ?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="{{ path('home') }}">Retour au site</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

<!-- Modal Mot de Passe Oublié-->
<div class="portfolio-modal modal fade" id="passwordmodal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- <div class="close-modal" data-dismiss="modal"></div> -->
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-10">
                        <div class="modal-body">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">Mot de Passe oublié ?</h1>
                                    <p class="mb-4">Entrez votre addresse email ci-dessous pour recevoir des instructions sur comment réinitialiser votre mot de passe.</p>
                                </div>
                                <form class="user">
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user" id="InputResetEmail" aria-describedby="emailHelp" placeholder="Adresse Email">
                                    </div>
                                    <a href="#" class="btn btn-primary btn-user btn-block">
                                        Réinitialiser votre Mot de Passe
                                    </a>
                                </form>
                                <hr>
                            <div class="text-center">
                                <button class="btn-sm btn-danger" data-dismiss="modal" type="button">
                                    <i class="fas fa-times mr-1"></i>
                                    Fermer cette fenêtre
                                </button>
                            <div class="text-center">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<!-- Bootstrap core JavaScript-->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="js/sb-admin-2.min.js"></script>

<!-- Page level plugins -->
<script src="vendor/chart.js/Chart.min.js"></script>

<!-- Page level custom scripts -->
<script src="js/demo/chart-area-demo.js"></script>
<script src="js/demo/chart-pie-demo.js"></script>
{% endblock %}
